      scanf("%s", &Estado1_C2);
      
      printf("2) Defina um nome para Cidade:\n");
      printf("*Nao pode conter carateres especiais.\n");
      printf("*Nao pode passar de 29 caracteres.\n");
      printf("Resposta: ");
      scanf("%s", &Cidade1_C2);

      printf("3) Defina um valor de populacao:\n");
      printf("*Nao pode conter carateres especiais.\n");
      printf("Resposta: ");
      scanf("%f", &Populacao1_C2);
      
      printf("4) Defina um valor de PIB:\n");
      printf("*Nao pode conter carateres especiais.\n");
      printf("Resposta: ");
      scanf("%f", &PIB_C2);

      printf("5) Defina a quantidade de pontos Turisticos:\n");
      printf("*Nao pode conter carateres especiais.\n");
      printf("Resposta: ");
      scanf("%i", &Pontos_turisticos1_C2);
      
    //EXIBINDO INFORMACOES CAPTURADAS
    printf("===== Captura das informacoes bem sucedidas =====\n");
      printf("Codigo da Carta: %s.\n", Codigo_da_Carta_C2);
      printf("Estado: %s.\n", Estado1_C2);
      printf("Cidade: %s.\n", Cidade1_C2);
      printf("Populacao: %i.\n", Populacao1_C2);
